@import "../star/star-template.wxss";

.movie-contianer {
  background: #999;
}

.movie-contianer-image {
  position: relative;
  background: #fff;
}

.head-img-hover {
  width: 100%;
  height: 300rpx;
  position: absolute;
  color: #fff;
  padding-left: 60rpx;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
}

.head-img-comment-tag {
  padding-left: 10rpx;
  padding-right: 10rpx;
  color: #898;
}


.head-img-hover-title {
  padding-top: 60rpx;
  padding-bottom: 20rpx;
}

.head-img-hover-title text {
  font-weight: bold;
  font-size: 40rpx;
}

.head-img-hover-address {
  padding-bottom: 30rpx;
}

.bg-image {
  width: 100%;
  height: 300rpx;
  -webkit-filter: blur(3px);
}

.poster-image {
  width: 170rpx;
  height: 200rpx;
  position: absolute; /*如果 使用absolute 就要相对于 父级 添加一个 relative*/
  top: 180rpx;
  right: 30rpx;
}

/*******标题 评分 信息块**********/

.details-text-title {
  padding-top: 20rpx;
  margin-bottom: 15rpx;
}

.details-text-title text {
  font-size: 25rpx;
  font-style: unset;
  font-weight: bold;
}

.details-info {
  background: #fff;
  padding-left: 60rpx;
  padding-bottom: 40rpx;
}

.details-horizontal {
  padding-top: 20rpx;
  display: flex;
  flex-direction: row;
}

.grade-star {
  padding-top: 7rpx;
  padding-left: 5rpx;
}

.details-title {
  color: #999;
  font-size: 25rpx;
  font-style: inherit;
}

.xx {
  padding-left: 13rpx;
  color: #666;
  font-size: 25rpx;
}

/*******剧情简介 块**********/

.details-synopsis {
  background: #fff;
  margin-top: 1rpx;
  margin-bottom: 1rpx;
  padding-left: 60rpx;
  padding-bottom: 30rpx;
}

.synopsis-title {
  padding-top: 30rpx;
  padding-bottom: 20rpx;
}

.synopsis-title text {
  color: #999;
  font-size: 25rpx;
}

.synopsis-content {
  display: -webkit-box;
  color: #777;
  font-size: 23rpx;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
  text-overflow: ellipsis;
}

.details-movie-people {
  background: #fff;
  margin-top: 2rpx;
  margin-bottom: 1rpx;
  padding-left: 60rpx;
  padding-bottom: 30rpx;
}

.image_header {
  width: 100rpx;
  height: 100rpx;
}
