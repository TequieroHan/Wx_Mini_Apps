page {
  width: 100%;
  height: 100%;
}

.contianer {
  display: flex;
  flex-direction: column;
}

.top {
  width: 100%;
  height: 460rpx;
}

.top-image {
  width: 100%;
  height: 100%;
}

/* 浮动 position*/

.top-image-music {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 180rpx;
  opacity: 0.6;
}

.post-center {
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.head-image {
  height: 64rpx;
  width: 64rpx;
  vertical-align: middle;
}

.name {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}

.post {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.post-time {
  font-size: 24rpx;
  margin-left: 30rpx;
  vertical-align: middle;
  color: #999;
}

.title {
  margin-left: 30rpx;
  margin-top: 20rpx;
  font-weight: bold;
  font-size: 18px;
}

.tool {
  flex-direction: row;
  margin-top: 20rpx;
}

.circle-img {
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}

.circle-img image {
  width: 90rpx;
  height: 90rpx;
}

.share-img {
  margin-left: 30rpx;
}

.horizon {
  width: 89%;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}

.content {
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}
