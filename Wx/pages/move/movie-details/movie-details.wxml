<import src="../star/star-template.wxml" />
<view class='movie-contianer'>
  <view class='movie-contianer-image'>
    <image class='bg-image' src='{{movieImage}}' mode='aspectFill' />
    <view class='head-img-hover'>
      <view class='head-img-hover-title'>
        <text>{{title}}</text>
      </view>
      <view class='head-img-hover-address'>
        <text>{{country}} · {{year}}</text>
      </view>
      <view class='head-img-comment'>
        <text style='color:red'>{{wishCount}}</text>
        <text class='head-img-comment-tag'>人喜欢</text>
        <text style='color:red'>{{commentCount}}</text>
        <text class='head-img-comment-tag'>条评论</text>
      </view>
    </view>
    <image class='poster-image' src='{{movieImage}}' mode='aspectFit' />
  </view>

  <view class='details-info'>
    <view class='details-text-title'>
      <text>西游记大结局</text>
    </view>
    <view class='details-horizontal'>
      <text class='details-title'>评分</text>
      <view class='grade-star'>
        <template is="starTemplate" />
      </view>
    </view>
    <view class='details-horizontal'>
      <text class='details-title'>导演</text>
      <text class='xx'>导演</text>
    </view>
    <view class='details-horizontal'>
      <text class='details-title'>影人</text>
      <text class='xx'>影人</text>
    </view>
    <view class='details-horizontal'>
      <text class='details-title'>类型</text>
      <text class='xx'>类型</text>
    </view>
  </view>
  <!--剧情简介-->
  <view class='details-synopsis'>
    <view class='synopsis-title'>
      <text>剧情简介</text>
    </view>
    <text class='synopsis-content'>剧情简介剧情简介剧情简介\n剧情简介剧情简介剧情简介\n剧情简介剧情简介\n剧情简介剧情简介\n剧情简介剧情简介\n剧情简介剧情简介剧情简介</text>
  </view>
  <!--剧情简介-->
  <view class='details-movie-people'>
    <view class='synopsis-title'>
      <text>影人</text>
    </view>

  </view>
</view>