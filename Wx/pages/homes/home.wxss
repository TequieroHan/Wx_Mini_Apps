  height: 500rpx;
  
}
.image_header{
  width:100%;
  height:500rpx;
}

.image_content{
  width: 100%;
  height: 340rpx;
  margin-top: 15rpx;
}
.heand_top{
  display: flex;
  align-items: center
}
.head_txt{
  font-size: 15px;
}
.heand_top image{
  width: 80rpx;
  height: 80rpx;
  margin: 10rpx;
